<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../public/style.css"> <!-- Thêm dòng này -->
  <title>CRUD User</title>
</head>
<body>
  <h1>User List</h1>
  <ul>
    <% users.forEach(user => { %>
      <li><%= user.name %> - <%= user.email %> | <a href="/edit/<%= user.id %>">Edit</a> | <a href="/delete/<%= user.id %>">Delete</a></li>
    <% }); %>
  </ul>
  <a href="/add">Add User</a>
</body>
</html>
